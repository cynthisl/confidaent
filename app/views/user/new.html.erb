<h1> HI NEW USER! </h1>
<div>
<%= form_for :user, url:{action:"create"} do |f| %>
    <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class:"form-control" %>
    </div>
    <div>
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div>
        <%= f.label :zip_code %><br>
        <%= f.number_field :zip_code, class:"form-control" %>
    </div>
    <div>
        <%= f.label :birthdate %><br>
        <%= f.date_select :birthdate, class:"form-control", :start_year => Date.today.year - 100, :end_year => Date.today.year %>
    </div>
    <div>
        Number of years in industry:
        <%= f.number_field :career_status, class:"form-control" %>
    </div>
    <div>
        I can answer your questions about:
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" value="">
